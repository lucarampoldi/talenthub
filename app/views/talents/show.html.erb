<div class="container">
  <div class="row">
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.6) 50%), url('<%= @talent.picture %>');">
      <h1><%= @talent.title%></h1>

    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col md-6">
    <h3 class="text-center"><%= @talent.title%></h3>
    <h4 class="text-center"><%= @talent.description %></h4>
  </div>

</div>
<%= link_to "Back to all talents", root_path %>

<%= simple_form_for @booking do |f| %>
  <%= f.input :content %>
  <%= f.input :datetime %>
  <%= f.button :submit %>
<% end %>
