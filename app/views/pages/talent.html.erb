<div class="container">
  <div class="row">
    <h1><%= @talent.title%></h1>
    <%= link_to "Back to all talents", root_path %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col md-6">
    <h3>Talents</h3>
    <table class="table table-bordered">
      <tbody>
        <thead>
          <th>Talents</th>
          <th>Description</th>
          <th>Action</th>
        </thead>
        <% @talents.titles.each do |talent| %>
        <tr>
          <td><%= talent.title %></td>
          <td><%= talent.description %></td>
          <td><%= talent.picture %></td>
        </tr>
        <%= link_to dashboard_path(talent), method: delete, data: { confirm: "Are you sure to delete your talent?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-sm-12 col-md-6">
  <%= render "booking/new", talent: @talent, booking: @booking %>
</div>
</div>
